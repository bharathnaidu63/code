#include <stdio.h>

int main() {
    int start, end, i;

    // Asking the user for the range
    printf("Enter the start of the range: ");
    scanf("%d", &start);
    printf("Enter the end of the range: ");
    scanf("%d", &end);

    // Checking and printing even numbers in the range
    printf("Even numbers between %d and %d are:\n", start, end);
    for(i = start; i <= end; i++) {
        if(i % 2 == 0) {
            printf("%d ", i);
        }
    }
    printf("\n");

    return 0;
}
